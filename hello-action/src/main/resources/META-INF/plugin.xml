<idea-plugin>
    <id>com.luamas.idea.plugin.helloaction</id>
    <name>HelloAction</name>
    <vendor email="myluamas@gmail.com" url="http://www.luamas.com">luamas</vendor>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <!-- 扩展输入程序，当输入的时候会自动处理-->
        <typedHandler implementation="com.luamas.idea.plugin.helloaction.MyTypedHandler"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="Luamas.HelloActionMenu" text="自定义插件">
            <add-to-group group-id="MainMenu" anchor="last"/>
<!--            这里如果类级别覆盖了text字段会优先使用类内部的text内容-->
            <action id="Luamas.HelloActionMenu.Hello" class="com.luamas.idea.plugin.helloaction.HelloAction" text="欢迎"/>
            <action id="Luamas.HelloActionMenu.ProjectInfo" class="com.luamas.idea.plugin.helloaction.ProjectInfoAction" text="项目信息"/>
        </group>
        <action id="Luamas.EditorIllustrationAction"
                class="com.luamas.idea.plugin.helloaction.EditorIllustrationAction"
                text="替换文本"
                description="替换选定文本"
                icon="SdkIcons.Sdk_default_icon">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="Luamas.EditorHandlerIllustration"
                class="com.luamas.idea.plugin.helloaction.EditorHandlerIllustration"
                text="添加插入符号"
                description="在现有插入符号的下面添加第二个插入符号。"
                icon="SdkIcons.Sdk_default_icon">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <!-- 将此项放在弹出菜单的第一个位置；如果项目和编辑器打开，则始终启用此项 -->
        <action id="Luamas.LogicalPositionIllustration"
                class="com.luamas.idea.plugin.helloaction.EditorAreaIllustration"
                text="插入符号位置"
                description="报告插入符号位置的信息。"
                icon="SdkIcons.Sdk_default_icon">
            <keyboard-shortcut keymap="$default" first-keystroke="control alt G"/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>